<div class="container-fluid overflow-auto">
    <h1 class="text-center">Bank Accounts</h1>

    <div class="col-xl-12 col-lg-12">
        <button class="btn btn-primary" id="add_bank_account">ADD Bank Account</button>
        <div class="card shadow mb-4">
            <div class="card-header bg-dark py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-white">Bank Accounts Table</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive table-striped">
                    <table class="table table-striped table-hover table-bordered" id="bank_accounts_table">
                        <thead class="" style="background-color: #4e73df;">
                            <tr class="text-center text-white">
                                <th scope="col">#</th>
                                <th scope="col">Code</th>
                                <th scope="col">Account Name</th>
                                <th scope="col">Account Number</th>
                                <th scope="col">Bank Type</th>
                                <th scope="col">Status</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody class="">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- ADD MODAL -->
    <div class="modal fade" id="addBankAccountModal" tabindex="-1" role="dialog" aria-labelledby="addBankAccountModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addBankAccountModalLabel">Add Bank Account</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="addBankAccountForm">
                        <div class="form-group">
                            <label for="add_bank_account_code" class="form-label">Code</label>
                            <input type="text" class="form-control" id="add_bank_account_code" name="add_bank_account_code" required>
                        </div>
                        <div class="form-group">
                            <label for="add_bank_account_name" class="form-label">Account Name</label>
                            <input type="text" class="form-control" id="add_bank_account_name" name="add_bank_account_name" required>
                        </div>
                        <div class="form-group">
                            <label for="add_bank_account_number" class="form-label">Account Number</label>
                            <input type="text" class="form-control" id="add_bank_account_number" name="add_bank_account_number" required>
                        </div>
                        <div class="form-group">
                            <label for="add_bank_account_type" class="form-label">Bank Type</label>
                            <input type="text" class="form-control" id="add_bank_account_type" name="add_bank_account_type" required>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary" id="save_add">Add Bank Account</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- EDIT MODAL -->
    <div class="modal fade" id="editBankAccountModal" tabindex="-1" role="dialog" aria-labelledby="editBankAccountModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editBankAccountModalLabel">Edit Bank Account</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="editBankAccountForm">
                        <input type="hidden" id="edit_bank_account_id" name="edit_bank_account_id">
                        <div class="form-group">
                            <label for="edit_bank_account_code" class="form-label">Code</label>
                            <input type="text" class="form-control" id="edit_bank_account_code" name="edit_bank_account_code" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_bank_account_name" class="form-label">Account Name</label>
                            <input type="text" class="form-control" id="edit_bank_account_name" name="edit_bank_account_name" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_bank_account_number" class="form-label">Account Number</label>
                            <input type="text" class="form-control" id="edit_bank_account_number" name="edit_bank_account_number" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_bank_account_type" class="form-label">Bank Type</label>
                            <input type="text" class="form-control" id="edit_bank_account_type" name="edit_bank_account_type" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_bank_account_status" class="form-label">Status</label>
                            <select class="form-control" id="edit_bank_account_status" name="edit_bank_account_status" required>
                                <option value="" disabled selected>Select Status</option>
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                            </select>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary" id="save_edit">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Confirm Edit Modal -->
    <div class="modal fade" id="confirmEditModal" tabindex="-1" role="dialog" aria-labelledby="confirmEditModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmEditModalLabel">Confirm Edit</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to save the changes?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="confirmEditBtn">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>
