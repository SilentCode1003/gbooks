<div class="container-fluid overflow-auto">
    <h1 class="text-center">Sales Order Items</h1>

    <div class="col-xl-12 col-lg-12">
        <button class="btn btn-primary" id="add_sales_order_item">ADD Sales Order Item</button>
        <div class="card shadow mb-4">
            <div class="card-header bg-dark py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-white">Sales Order Items Table</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive table-striped">
                    <table class="table table-striped table-hover table-bordered" id="sales_order_items_table">
                        <thead class="" style="background-color: #4e73df;">
                            <tr class="text-center text-white">
                                <th scope="col">#</th>
                                <th scope="col">Sales Order ID</th>
                                <th scope="col">Product ID</th>
                                <th scope="col">Product Cost</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Unit</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody class="">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- ADD MODAL -->
    <div class="modal fade" id="addSalesOrderItemModal" tabindex="-1" role="dialog" aria-labelledby="addSalesOrderItemModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addSalesOrderItemModalLabel">Add Sales Order Item</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="addSalesOrderItemForm">
                        <div class="form-group">
                            <label for="add_sales_order_id" class="form-label">Sales Order ID</label>
                            <input type="number" class="form-control" id="add_sales_order_id"
                                name="add_sales_order_id" required>
                        </div>
                        <div class="form-group">
                            <label for="add_product_id" class="form-label">Product ID</label>
                            <input type="number" class="form-control" id="add_product_id"
                                name="add_product_id" required>
                        </div>
                        <div class="form-group">
                            <label for="add_product_cost" class="form-label">Product Cost</label>
                            <input type="number" step="0.01" class="form-control" id="add_product_cost"
                                name="add_product_cost" required>
                        </div>
                        <div class="form-group">
                            <label for="add_quantity" class="form-label">Quantity</label>
                            <input type="number" step="0.01" class="form-control" id="add_quantity"
                                name="add_quantity" required>
                        </div>
                        <div class="form-group">
                            <label for="add_unit" class="form-label">Unit</label>
                            <input type="text" class="form-control" id="add_unit"
                                name="add_unit" required>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary" id="save_add">Add Sales Order Item</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- EDIT MODAL -->
    <div class="modal fade" id="editSalesOrderItemModal" tabindex="-1" role="dialog" aria-labelledby="editSalesOrderItemModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editSalesOrderItemModalLabel">Edit Sales Order Item</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="editSalesOrderItemForm">
                        <input type="hidden" id="edit_id" name="edit_id">
                        <div class="form-group">
                            <label for="edit_sales_order_id" class="form-label">Sales Order ID</label>
                            <input type="number" class="form-control" id="edit_sales_order_id"
                                name="edit_sales_order_id" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_product_id" class="form-label">Product ID</label>
                            <input type="number" class="form-control" id="edit_product_id"
                                name="edit_product_id" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_product_cost" class="form-label">Product Cost</label>
                            <input type="number" step="0.01" class="form-control" id="edit_product_cost"
                                name="edit_product_cost" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_quantity" class="form-label">Quantity</label>
                            <input type="number" step="0.01" class="form-control" id="edit_quantity"
                                name="edit_quantity" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_unit" class="form-label">Unit</label>
                            <input type="text" class="form-control" id="edit_unit"
                                name="edit_unit" required>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary" id="save_edit">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Confirm Edit Modal -->
    <div class="modal fade" id="confirmEditModal" tabindex="-1" role="dialog" aria-labelledby="confirmEditModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmEditModalLabel">Confirm Edit</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to save the changes?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="confirmEditBtn">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>
