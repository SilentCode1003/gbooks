<div class="container-fluid">
    <h1 class="text-center">Vendors</h1>
    <div class="col-xl-12 col-lg-12">
        <button class="btn btn-primary" id="add_vendor">ADD Vendors</button>
        <div class="card shadow mb-4">
            <div class="card-header bg-dark py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-white">Vendors Table</h6>
            </div>
        
            <div class="card-body">
                <div class="table-responsive table-striped">
                    <table class="table table-striped table-hover table-bordered" id="vendors_table">
                        <thead class="" style="background-color: #4e73df;">
                            <tr class="text-center text-white">
                                <th scope="col">#</th>
                                <th scope="col">Business Name</th>
                                <th scope="col">Business Type</th>
                                <th scope="col">Contact Person</th>
                                <th scope="col">Email</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Mobile</th>
                                <th scope="col">Business Address</th>
                                <th scope="col">TIN</th>
                                <th scope="col">Status</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody class="">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
        <!-- ADD MODAL -->
        <div class="modal fade" id="addVendorModal" tabindex="-1" role="dialog" aria-labelledby="addVendorModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addVendorModalLabel">Add Vendor</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="addVendorForm">
                        <div class="form-group">
                            <label for="add_vendor_business_name" class="form-label">Business Name</label>
                            <input type="text" class="form-control" id="add_vendor_business_name"
                                name="add_vendor_business_name" required>
                        </div>
                        <div class="form-group">
                            <label for="add_vendor_business_type" class="form-label">Business Type</label>
                            <input type="text" class="form-control" id="add_vendor_business_type" name="add_vendor_business_type"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="add_vendor_contact_person" class="form-label">Contact Person</label>
                            <input type="text" class="form-control" id="add_vendor_contact_person" name="add_vendor_contact_person"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="add_vendor_email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="add_vendor_email" name="add_vendor_email"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="add_vendor_phone" class="form-label">Phone</label>
                            <input type="text" class="form-control" id="add_vendor_phone" name="add_vendor_phone"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="add_vendor_mobile" class="form-label">Mobile</label>
                            <input type="text" class="form-control" id="add_vendor_mobile" name="add_vendor_mobile"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="add_vendor_business_address" class="form-label">Business Address</label>
                            <input type="text" class="form-control" id="add_vendor_business_address" name="add_vendor_business_address"
                                required>
                        </div>
                        <div class="form-group">
                            <label for="add_vendor_tin" class="form-label">TIN</label>
                            <input type="text" class="form-control" id="add_vendor_tin" name="add_vendor_tin"
                                required>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary" id="save_add">Add Vendor</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- EDIT MODAL -->
    <div class="modal fade" id="editVendorModal" tabindex="-1" role="dialog" aria-labelledby="editVendorModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editVendorModalLabel">Edit Vendor</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="editVendorForm">
                        <input type="hidden" id="edit_vendor_id" name="edit_vendor_id">
                        <div class="form-group">
                            <label for="edit_vendor_business_name" class="form-label">Business Name</label>
                            <input type="text" class="form-control" id="edit_vendor_business_name" name="edit_vendor_business_name" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_vendor_business_type" class="form-label">Business Type</label>
                            <input type="text" class="form-control" id="edit_vendor_business_type" name="edit_vendor_business_type" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_vendor_contact_person" class="form-label">Contact Person</label>
                            <input type="text" class="form-control" id="edit_vendor_contact_person" name="edit_vendor_contact_person" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_vendor_email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="edit_vendor_email" name="edit_vendor_email" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_vendor_phone" class="form-label">Phone</label>
                            <input type="text" class="form-control" id="edit_vendor_phone" name="edit_vendor_phone" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_vendor_mobile" class="form-label">Mobile</label>
                            <input type="text" class="form-control" id="edit_vendor_mobile" name="edit_vendor_mobile" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_vendor_business_address" class="form-label">Business Address</label>
                            <input type="text" class="form-control" id="edit_vendor_business_address" name="edit_vendor_business_address" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_vendor_tin" class="form-label">TIN</label>
                            <input type="text" class="form-control" id="edit_vendor_tin" name="edit_vendor_tin" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_vendor_status" class="form-label">Status</label>
                            <select class="form-control" id="edit_vendor_status" name="edit_vendor_status" required>
                                <option value="" disabled selected>Select Status</option>
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                            </select>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary" id="save_edit">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Confirm Edit Modal -->
    <div class="modal fade" id="confirmEditModal" tabindex="-1" role="dialog" aria-labelledby="confirmEditModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmEditModalLabel">Confirm Edit</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to save the changes?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="confirmEditBtn">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>