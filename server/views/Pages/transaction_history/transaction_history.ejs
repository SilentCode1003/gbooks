<div class="container-fluid overflow-auto">
    <h1 class="text-center">Transactions</h1>

    <div class="col-xl-12 col-lg-12">
        <button class="btn btn-primary" id="add_transaction">ADD Transaction</button>
        <div class="card shadow mb-4">
            <div class="card-header bg-dark py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-white">Transactions Table</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive table-striped">
                    <table class="table table-striped table-hover table-bordered" id="transactions_table">
                        <thead class="" style="background-color: #4e73df;">
                            <tr class="text-center text-white">
                                <th scope="col">#</th>
                                <th scope="col">Transaction ID</th>
                                <th scope="col">Status</th>
                                <th scope="col">Process By</th>
                                <th scope="col">Process Date</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody class="">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- ADD MODAL -->
    <div class="modal fade" id="addTransactionModal" tabindex="-1" role="dialog" aria-labelledby="addTransactionModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addTransactionModalLabel">Add Transaction</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="addTransactionForm">
                        <div class="form-group">
                            <label for="add_transaction_id" class="form-label">Transaction ID</label>
                            <input type="text" class="form-control" id="add_transaction_id"
                                name="add_transaction_id" required>
                        </div>
                        <div class="form-group">
                            <label for="add_status" class="form-label">Status</label>
                            <select class="form-control" id="add_status" name="add_status" required>
                                <option value="" disabled selected>Select Status</option>
                                <option value="NOT PAID">Not Paid</option>
                                <option value="PARTIALLY PAID">Partially Paid</option>
                                <option value="PAID">Paid</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="add_process_by" class="form-label">Process By</label>
                            <input type="text" class="form-control" id="add_process_by"
                                name="add_process_by" required>
                        </div>
                        <div class="form-group">
                            <label for="add_process_date" class="form-label">Process Date</label>
                            <input type="text" class="form-control" id="add_process_date"
                                name="add_process_date" required>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary" id="save_add">Add Transaction</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- EDIT MODAL -->
    <div class="modal fade" id="editTransactionModal" tabindex="-1" role="dialog" aria-labelledby="editTransactionModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editTransactionModalLabel">Edit Transaction</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="editTransactionForm">
                        <input type="hidden" id="edit_id" name="edit_id">
                        <div class="form-group">
                            <label for="edit_transaction_id" class="form-label">Transaction ID</label>
                            <input type="text" class="form-control" id="edit_transaction_id"
                                name="edit_transaction_id" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_status" class="form-label">Status</label>
                            <select class="form-control" id="edit_status" name="edit_status" required>
                                <option value="" disabled selected>Select Status</option>
                                <option value="NOT PAID">Not Paid</option>
                                <option value="PARTIALLY PAID">Partially Paid</option>
                                <option value="PAID">Paid</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="edit_process_by" class="form-label">Process By</label>
                            <input type="text" class="form-control" id="edit_process_by"
                                name="edit_process_by" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_process_date" class="form-label">Process Date</label>
                            <input type="text" class="form-control" id="edit_process_date"
                                name="edit_process_date" required>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary" id="save_edit">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Confirm Edit Modal -->
    <div class="modal fade" id="confirmEditModal" tabindex="-1" role="dialog" aria-labelledby="confirmEditModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmEditModalLabel">Confirm Edit</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to save the changes?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="confirmEditBtn">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>
