<div class="container-fluid overflow-auto">
    <h1 class="text-center">Branch</h1>

    <div class="col-xl-12 col-lg-12">
        <button class="btn btn-primary" id="add_branch">ADD Branch</button>
        <div class="card shadow mb-4">
            <div class="card-header bg-dark py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-white">Branch Table</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive table-striped">
                    <table class="table table-striped table-hover table-bordered" id="branch_table">
                        <thead class="" style="background-color: #4e73df;">
                            <tr class="text-center text-white">
                                <th scope="col">#</th>
                                <th scope="col">Code</th>
                                <th scope="col">Description</th>
                                <th scope="col">Email</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Mobile</th>
                                <th scope="col">Address</th>
                                <th scope="col">Manager</th>
                                <th scope="col">Status</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody class="">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- ADD MODAL -->
    <div class="modal fade" id="addBranchModal" tabindex="-1" role="dialog" aria-labelledby="addBranchModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addBranchModalLabel">Add Branch</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="addBranchForm">
                        <div class="form-group">
                            <label for="add_branch_code" class="form-label">Branch Code</label>
                            <input type="text" class="form-control" id="add_branch_code" name="add_branch_code" required>
                        </div>
                        <div class="form-group">
                            <label for="add_branch_description" class="form-label">Description</label>
                            <input type="text" class="form-control" id="add_branch_description" name="add_branch_description" required>
                        </div>
                        <div class="form-group">
                            <label for="add_branch_email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="add_branch_email" name="add_branch_email" required>
                        </div>
                        <div class="form-group">
                            <label for="add_branch_phone" class="form-label">Phone</label>
                            <input type="text" class="form-control" id="add_branch_phone" name="add_branch_phone">
                        </div>
                        <div class="form-group">
                            <label for="add_branch_mobile" class="form-label">Mobile</label>
                            <input type="text" class="form-control" id="add_branch_mobile" name="add_branch_mobile" required>
                        </div>
                        <div class="form-group">
                            <label for="add_branch_address" class="form-label">Address</label>
                            <input type="text" class="form-control" id="add_branch_address" name="add_branch_address" required>
                        </div>
                        <div class="form-group">
                            <label for="add_branch_manager" class="form-label">Manager</label>
                            <input type="text" class="form-control" id="add_branch_manager" name="add_branch_manager" required>
                        </div>
                        <div class="modal-footer"></div>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary" id="save_add">Add Branch</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- EDIT MODAL -->
    <div class="modal fade" id="editBranchModal" tabindex="-1" role="dialog" aria-labelledby="editBranchModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editBranchModalLabel">Edit Branch</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="editBranchForm">
                        <input type="hidden" id="edit_branch_id" name="edit_branch_id">
                        <div class="form-group">
                            <label for="edit_branch_code" class="form-label">Branch Code</label>
                            <input type="text" class="form-control" id="edit_branch_code" name="edit_branch_code" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_branch_description" class="form-label">Description</label>
                            <input type="text" class="form-control" id="edit_branch_description" name="edit_branch_description" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_branch_email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="edit_branch_email" name="edit_branch_email" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_branch_phone" class="form-label">Phone</label>
                            <input type="text" class="form-control" id="edit_branch_phone" name="edit_branch_phone">
                        </div>
                        <div class="form-group">
                            <label for="edit_branch_mobile" class="form-label">Mobile</label>
                            <input type="text" class="form-control" id="edit_branch_mobile" name="edit_branch_mobile" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_branch_address" class="form-label">Address</label>
                            <input type="text" class="form-control" id="edit_branch_address" name="edit_branch_address" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_branch_manager" class="form-label">Manager</label>
                            <input type="text" class="form-control" id="edit_branch_manager" name="edit_branch_manager" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_branch_status" class="form-label">Status</label>
                            <select class="form-control" id="edit_branch_status" name="edit_branch_status" required>
                                <option value="" disabled selected>Select Status</option>
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                            </select>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary" id="save_edit">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Confirm Edit Modal -->
    <div class="modal fade" id="confirmEditModal" tabindex="-1" role="dialog" aria-labelledby="confirmEditModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmEditModalLabel">Confirm Edit</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to save the changes?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="confirmEditBtn">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>
