<div class="container-fluid overflow-auto">
    <h1 class="text-center">Bank Balances</h1>

    <div class="col-xl-12 col-lg-12">
        <button class="btn btn-primary" id="add_bank_balance">ADD Bank Balance</button>
        <div class="card shadow mb-4">
            <div class="card-header bg-dark py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-white">Bank Balances Table</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive table-striped">
                    <table class="table table-striped table-hover table-bordered" id="bank_balances_table">
                        <thead class="" style="background-color: #4e73df;">
                            <tr class="text-center text-white">
                                <th scope="col">#</th>
                                <th scope="col">Bank Account ID</th>
                                <th scope="col">Transaction Date</th>
                                <th scope="col">Update Date</th>
                                <th scope="col">Previous Amount</th>
                                <th scope="col">Current Amount</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody class="">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- ADD MODAL -->
    <div class="modal fade" id="addBankBalanceModal" tabindex="-1" role="dialog" aria-labelledby="addBankBalanceModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addBankBalanceModalLabel">Add Bank Balance</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="addBankBalanceForm">
                        <div class="form-group">
                            <label for="add_bank_account_id" class="form-label">Bank Account ID</label>
                            <input type="number" class="form-control" id="add_bank_balance_bank_account_id" name="add_bank_balance_bank_account_id" required>
                        </div>
                        <div class="form-group">
                            <label for="add_transaction_date" class="form-label">Transaction Date</label>
                            <input type="text" class="form-control" id="add_bank_balance_transaction_date" name="add_bank_balance_transaction_date" required>
                        </div>
                        <div class="form-group">
                            <label for="add_update_date" class="form-label">Update Date</label>
                            <input type="text" class="form-control" id="add_bank_balance_update_date" name="add_bank_balance_update_date" required>
                        </div>
                        <div class="form-group">
                            <label for="add_previous_amount" class="form-label">Previous Amount</label>
                            <input type="number" step="0.01" class="form-control" id="add_bank_balance_previous_amount" name="add_bank_balance_previous_amount" required>
                        </div>
                        <div class="form-group">
                            <label for="add_current_amount" class="form-label">Current Amount</label>
                            <input type="number" step="0.01" class="form-control" id="add_bank_balance_current_amount" name="add_bank_balance_current_amount" required>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary" id="save_add">Add Bank Balance</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- EDIT MODAL -->
    <div class="modal fade" id="editBankBalanceModal" tabindex="-1" role="dialog" aria-labelledby="editBankBalanceModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editBankBalanceModalLabel">Edit Bank Balance</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="editBankBalanceForm">
                        <input type="hidden" id="edit_bank_balance_id" name="edit_bank_balance_id">
                        <div class="form-group">
                            <label for="edit_bank_account_id" class="form-label">Bank Account ID</label>
                            <input type="number" class="form-control" id="edit_bank_balance_bank_account_id" name="edit_bank_balance_bank_account_id" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_transaction_date" class="form-label">Transaction Date</label>
                            <input type="text" class="form-control" id="edit_bank_balance_transaction_date" name="edit_bank_balance_transaction_date" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_update_date" class="form-label">Update Date</label>
                            <input type="text" class="form-control" id="edit_bank_balance_update_date" name="edit_bank_balance_update_date" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_previous_amount" class="form-label">Previous Amount</label>
                            <input type="number" step="0.01" class="form-control" id="edit_bank_balance_previous_amount" name="edit_bank_balance_previous_amount" required>
                        </div>
                        <div class="form-group">
                            <label for="edit_current_amount" class="form-label">Current Amount</label>
                            <input type="number" step="0.01" class="form-control" id="edit_bank_balance_current_amount" name="edit_bank_balance_current_amount" required>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary" id="save_edit">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Confirm Edit Modal -->
    <div class="modal fade" id="confirmEditModal" tabindex="-1" role="dialog" aria-labelledby="confirmEditModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmEditModalLabel">Confirm Edit</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to save the changes?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="confirmEditBtn">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>
